{
    "name": "prooph/event-store-http-middleware",
    "description": "PSR-15 EventStore HTTP Middleware",
    "type": "library",
    "license": "BSD-3-Clause",
    "homepage": "http://getprooph.org/",
    "authors": [
        {
            "name": "Alexander Miertsch",
            "email": "contact@prooph.de",
            "homepage": "http://www.prooph.de"
        },
        {
            "name": "Sascha-Oliver Prolic",
            "email": "saschaprolic@googlemail.com"
        }
    ],
    "keywords": [
        "EventStore",
        "EventSourcing",
        "DDD",
        "prooph",
        "HTTP",
        "API"
    ],
    "require": {
        "php": "^7.1",
        "psr/container": "^1.0",
        "prooph/event-store" : "^7.2",
        "roave/security-advisories": "dev-master",
        "zendframework/zend-expressive-helpers": "^4.0",
        "psr/http-server-middleware": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0",
        "prooph/php-cs-fixer-config": "^0.1.1",
        "satooshi/php-coveralls": "^1.0",
        "malukenho/docheader": "^0.1.4"
    },
    "autoload": {
        "psr-4": {
            "Prooph\\EventStore\\Http\\Middleware\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ProophTest\\EventStore\\Http\\Middleware\\": "tests/",
        }
    },
    "config": {
        "preferred-install": {
            "prooph/*": "source"
        }
    },
    "scripts": {
        "check": [
            "@cs",
            "@test",
            "@docheader"
        ],
        "cs": "php-cs-fixer fix -v --diff --dry-run",
        "cs-fix": "php-cs-fixer fix -v --diff",
        "test": "phpunit",
        "docheader": "docheader check src/ tests/"
    }
}
